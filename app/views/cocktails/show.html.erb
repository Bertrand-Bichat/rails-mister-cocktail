<div class="container">
  <div class="mt-4 card-category" style="height: 500px; font-weight: bold; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
    <h1><%= @cocktail.name.capitalize %></h1>
  </div>
  <br>
  <div class="d-flex justify-content-around align-items-baseline mb-4">
    <div class="border p-4">
      <h3>Ingredients list :</h3>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <div class="d-flex">
            <li><%= dose.ingredient.name %> : <%= dose.description %></li>
            <div class="ml-2">
              <%= link_to dose_path(dose), method: :delete, :class => 'link', data: { confirm: "Are you sure?" } do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </ul>
    </div>
    <div class="mt-4 border p-4">
      <h2>Add a new ingredient</h2>
      <%= render './doses/form' %>
    </div>
  </div>
</div>
